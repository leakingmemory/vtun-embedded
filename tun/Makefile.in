INSTALL = @INSTALL@
OS_DIR  = @OS_DIR@

CONFIGURE_FILES = Makefile config.status config.cache config.h config.log

all: module 

module:
	cd $(OS_DIR); make all

install: module
	cd $(OS_DIR); make inst

clean:
	cd $(OS_DIR); make clean
	rm -f core *~
      
distclean: clean
	cd $(OS_DIR); make distclean
	rm -f $(CONFIGURE_FILES)
