CONFIGURE_FILES = Makefile config.status config.cache config.h config.log

INSTALL = @INSTALL@

DEFS = @DEFS@

KDIR = @KDIR@
KVER = @KVER@
ARCH = @ARCH@

DEPMOD  = /sbin/depmod
MDIR = /lib/modules/$(KVER)/net
HPATH  = $(KDIR)/include

include $(KDIR)/.config

CFLAGS = $(DEFS) -O2 -DMODULE -D__KERNEL__ -I$(HPATH) -I. \
	 -Wall -Wstrict-prototypes -fomit-frame-pointer -fno-strict-aliasing 

ifdef CONFIG_SMP
CFLAGS += -D__SMP__
endif

ifdef CONFIG_MODVERSIONS
CFLAGS += -DMODVERSIONS -include $(HPATH)/linux/modversions.h
endif

all: module

include $(KDIR)/arch/$(ARCH)/Makefile

module: tun.o

tun.o: tun.c if_tun.h

dev:
	./create_dev

# Target 'install' conflicts with Makefile from arch/i386
inst: module dev
	$(INSTALL) -d -m 755 -o root -g root $(MDIR)
	$(INSTALL) -m 755 -o root -g root tun.o $(MDIR)
	$(DEPMOD) -a 

clean:
	rm -f *.o *~

distclean:
	rm -f tun.c if_tun.h
	rm -f $(CONFIGURE_FILES)
